<% content_for :content do %>

<div class="row"> 

<div class="col">

</div>

<div class="col-12 col-md-10">

<h4>Product Field Feedback</h4>

<p>(sort by <%= link_to "Votes", posts_path(sort: "votes"), :title=>"Sort by most Upvotes" %> OR <%= link_to "Product", posts_path(sort: "product"), :title=>"Sort by product" %> OR <%= link_to "Date Created", posts_path(sort: "created_at"), :title=>"Sort by the latest feedback added"  %> OR <%= link_to "User", posts_path(sort: "email"), :title=>"Sort by user creating the feedback (A-Z)"  %>) <%= link_to 'New', new_post_path, :title=>"Create new feedback"  %> | 
  <%= link_to "Download", posts_export_posts_path(sort: @sort, format: "csv"), :title=>"Download all feedback as a csv file to import into Excel"  %> |
  <%= link_to "About", home_index_path, :title=>"About the Ranker tool"  %> |
      <% if user_signed_in? %>
<%= link_to 'Logout (' + current_user.email.split("@").first.to_s + ')', destroy_user_session_path, method: :delete, :title=>"Logout of the Ranker"  %>
      <% else %>
<%= link_to 'Login', new_user_session_path, :title=>"Login into the Ranker to add feedback and upvote feedback"  %>
      <% end %>
 | <%= link_to 'Admin', admin_index_path, :title=>"Create and edit users"  %>


<small><%= @sortname %></small> 

</p>


<table class="table table-sm table-hover all_table">
  <thead>
  <tr class="all_table_heading">
    <th></th>    
    <th></th>
    <th>Product</th>    
    <th>Title</th>
    <th>Text <span class="font-weight-normal small">(click rows for detail)</span></th>
    <th>User</th>    
    <th>Created</th>     
    <th class="text-center">
      <span class="oi oi-wrench" title="Thumbs Up" aria-hidden="true"></span> 
    </th>
  </thead>
  </tr>
 

  <tbody>
  <% @posts.each do |post| %>

  <% 

  @username = post.email.split("@").first

  %>
    <tr class="">
      
      <td>
        <%= post.get_upvotes.size %>
      </td>
      <td class="voter">

<% if user_signed_in? %>

<% if current_user.voted_for? post %>

<%= link_to "<span class=\"oi oi-action-undo\" aria-hidden=\"true\"></span>".html_safe, posts_unvote_path(:id=>post.id), :title=>"Cancel your vote for this post"%>

<% else %>

<%= link_to "<span class=\"oi oi-thumb-up\" aria-hidden=\"true\"></span>".html_safe, posts_upvote_path(:id=>post.id), :title=>"Upvote this post" %>

<% end %>



<% if false %>

<%= link_to "<span class=\"oi oi-action-undo\" aria-hidden=\"true\"></span>".html_safe, '#', :onclick => "unVote(\"" + post.id.to_s + "\"); return false", :title=>"Cancel this vote", :id=>post.id %>

<%= link_to "<span class=\"oi oi-thumb-up\" aria-hidden=\"true\"></span>".html_safe, '#', :onclick => "upVote(\"" + post.id.to_s + "\"); return false", :title=>"Upvote this post", :id=>post.id %>

<%= link_to "<span class=\"oi oi-thumb-down\" aria-hidden=\"true\"></span>".html_safe, '#', :onclick => "downVote(\"" + post.id.to_s + "\"); return false", :title=>"Downvote this post" %>

<% end %>

<% end %>

       </td>
      <td id="pproduct"><div class="text-truncate" style="max-width: 100px;" data-title="<%= post.product %>" title="<%= post.product %>"><%= post.product %></div></td>
      <td id="ptitle"><div class="text-truncate" style="max-width: 400px;" data-title="<%= post.title %>" title="<%= post.title %>"><%= post.title %></div></td>
      <td><div class="text-truncate" style="max-width: 250px;" data-text="<%= post.text %>" title="<%= post.text %>"><%= post.text %></div></td>
      <td><div class="text-truncate" style="max-width: 75px;"><%= @username %></div></td>
      <td><div class="text-truncate" style="max-width: 100px;" ><%= post.created_at.strftime("%-m/%-d/%y") %></div></td>             
      <td><div class="" style="max-width: 200px;">
      
        <%= link_to 'Show', post_path(post) %>
      
        <% if user_signed_in? && post.user_id == current_user.id %>
        | 
          <%= link_to 'Edit', edit_post_path(post), :title=>post.id %>
        <% end %>    
      </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p></p>
<%= will_paginate @posts %>


</div>

<div class="col">

</div>

</div>

<% end %>

<% content_for :bottom do %>

  <%= render "posts/posttext" %>

<% end %>