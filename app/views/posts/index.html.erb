<% content_for :content do %>

<h1>All Posts</h1>
<p>(sorted by date created) <%= link_to 'New', new_post_path %></p>


<table class="all_table">
  <tr class="all_table_heading">
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>

<% end %>