<% content_for :content do %>

<div class="row"> 

<div class="col">

</div>

<div class="col-12 col-md-6">

<h1>Edit Post Detail</h1>
<p><%= link_to 'All Posts', posts_path %></p>


<%= form_with model: @post, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, :placeholder => "Title of Post", :class => "form-control" %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, :placeholder => "More info about Post", :class => "form-control", :rows => 4  %>
  </p>
 
  <p>
    <%= form.submit "Save", :class=>"btn btn-outline-secondary " %>
  </p>
<% end %>


</div>

<div class="col">

</div>

</div>

<% end %>