<div class="card">
<div class="card-body m-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email address", :type => "email", :class => "form-control mt-10 mb-3" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "Password", :type => "password", :class => "form-control my-3" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Re-type Password", :type => "password", :class => "form-control my-3" %>
  </div>

  <div class="actions text-center mt-2">
    <%= f.submit "Sign up", :class=>"btn btn-outline-secondary btn-block" %>
  </div>
<% end %>

</div>

<div class="card-footer text-muted">
Already joined? <%= link_to "Sign In", new_user_session_path, :class=>"btn btn-outline-primary ml-2" %>
</div>

</div>